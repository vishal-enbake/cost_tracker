<%= content_tag :table, :class => "table table-bordered span6" do%>
	<%= content_tag :tr do%>
		<%= content_tag :th, "Name"%>
		<%= content_tag :th, "Action"%>
	<% end %>
	<%= content_tag :tr do%>
		<%= content_tag :td do%>
			<%= @project.name %>
		<% end %>
		<%= content_tag :td do%>
			<%= content_tag :div, :class => "btn-group" do%>
				<%= content_tag(:button, :class =>"btn btn-mini btn-info dropdown-toggle", "data-toggle" => "dropdown") do %>
					<%= "Action" %> <%= content_tag :span, "", :class => "caret"%>
				<% end %>
				<%= content_tag :ul, :class => "dropdown-menu", :role=> "menu" do%>
					<%= content_tag :li, (link_to "View Divisions", project_divisions_path(@project)) %>
					<%= content_tag :li, (link_to 'Add Division',  new_project_division_path(@project)) %>
				<% end %>
			<% end %> 
		<% end %>
	<% end %>
<% end %>
<%= content_tag :div, :class => "span12" do%>
	<%= link_to 'Edit', edit_project_path(@project) %> |
	<%= link_to 'Back', projects_path %>
<% end %>
