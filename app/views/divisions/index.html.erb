<%= content_tag :table, :class => "table table-bordered span6" do%>
	<%= content_tag :tr do%>
		<%= content_tag :th, "Name"%>
		<%= content_tag :th, "Action"%>
	<% end %>
	<% @divisions.each do |division| %>
		<%= content_tag :tr do%>
			<%= content_tag :td do%>
				<%= division.name %>
			<% end %>
			<%= content_tag :td do%>
				<%= content_tag :div, :class => "btn-group" do%>
					<%= content_tag(:button, :class =>"btn btn-mini btn-info dropdown-toggle", "data-toggle" => "dropdown") do %>
						<%= "Action" %> <%= content_tag :span, "", :class => "caret"%>
					<% end %>
					<%= content_tag :ul, :class => "dropdown-menu", :role=> "menu" do%>
						<%= content_tag :li, (link_to 'Show', [@project, division]) %>
						<%= content_tag :li, (link_to 'Edit', edit_project_division_path(@project, division)) %>
					<% end %>
				<% end %> 
			<% end %>
		<% end %>
	<% end %>
<% end %>
<%= content_tag :div, :class => "span12" do%>
	<%= link_to 'New Division', new_project_division_path %>
<% end %>
