<h1>Listing projects</h1>
<%= content_tag :table, :class => "table table-striped table-bordered table-hover span10" do%>
	<%= content_tag :tr do%>
		<%= content_tag :th, "Name"%>
		<%= content_tag :th, "Client"%>
		<%= content_tag :th, "Amount"%>
		<%= content_tag :th, "Start Date"%>
		<%= content_tag :th, "Due Date"%>
		<%= content_tag :th, "Status"%>
		<%= content_tag :th, "Action"%>
	<% end %>
	<% @projects.each do |project|%>
		<%= content_tag :tr do%>
			<%= content_tag :td do%>
				<%= project.name %>
			<% end %>
			<%= content_tag :td do%>
				<%= project.client %>
			<% end %>
			<%= content_tag :td do%>
				<%= project.amount %>
			<% end %>
			<%= content_tag :td do%>
				<%= project.start_date %>
			<% end %>
			<%= content_tag :td do%>
				<%= project.due_date %>
			<% end %>
			<%= content_tag :td do%>
				<%= project.status %>
			<% end %>
			
			<%= content_tag :td do%>
				<%= content_tag :div, :class => "btn-group" do%>
					<%= content_tag(:button, :class =>"btn btn-mini btn-info dropdown-toggle", "data-toggle" => "dropdown") do %>
						<%= "Action" %> <%= content_tag :span, "", :class => "caret"%>
					<% end %>
					<%= content_tag :ul, :class => "dropdown-menu", :role=> "menu" do%>
						<%= content_tag :li, (link_to "View Project", project_path(project)) %>
						<%= content_tag :li, (link_to "Edit Project", edit_project_path(project)) %>
					<% end %>
				<% end %> 
			<% end %>
		<% end %>
	<% end %>
<% end %>
<%= content_tag :div, :class => "span12" do %>
	<%= link_to 'New Project', new_project_path %>
<% end %>
